CFLAGS = -Wall -std=c99
LFLAGS = -lm
LIBS = -lfts
CC = gcc

all: overlay

overlay: main.o logic.o sh.o
	$(CC) $(LFLAGS) main.o logic.o sh.o -o overlay

external: main.o logic.o sh.o
	$(CC) $(LFLAGS) main.o logic.o sh.o -o overlay $(LIBS)

main.o: main.c logic.h
	$(CC) $(CFLAGS) -c main.c

logic.o: logic.c logic.h sh.h
	$(CC) $(CFLAGS) -c logic.c

sh.o: sh.c sh.h
	$(CC) $(CFLAGS) -c sh.c

clean:
	$(RM) main.o logic.o sh.o overlay
